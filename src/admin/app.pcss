.admin-wrapper, .maincontent {
  height: 100%;
}

.app-container {
   display: flex;
   flex-direction: column;
   height: 100%;
   padding-bottom: 30px;
}

.page-content {
   background: rgba(#fff, .8);
   position: relative;
   flex-grow: 1;

   &::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: url('../images/content/bg-mountains.jpg') center center / cover no-repeat;
      z-index: -10;
   }
}
