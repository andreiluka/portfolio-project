.reviews-slider {
   max-width: 1000px;
   width: 100%;

   &__container {
      position: relative;
      overflow: hidden;
   }

   &__list {
      transition: transform 0.6s ease;
      transform: translateX(0%);

      display: grid;
      grid-auto-columns: 50%;
      grid-auto-flow: column;

      @include phones {
         grid-auto-columns: 100%;
      }
   }
}