mixin socials(mod)
   div(class='socials socials--' + mod)
      ul.socials__list
         - 
            var socialItem = [
               {
                  icon:"insta",
                  address:"https://www.instagram.com/"
               },{
                  icon:"vk",
                  address:"https://vk.com/id24270309/"
               },{
                  icon:"github",
                  address:"https://github.com/andreiluka/"
               }
            ]

         each item in socialItem
            li.socials__item
               a.socials__link(href=`${item.address}` target="_blank")
                  +icon(`${item.icon}`, 'socials__icon')